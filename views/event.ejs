<body>

  <div class="main-wrapper">

    <!-- Header Start  -->
    <div id="header" class="section exvent-header-section">

      <div class="container">

        <!-- Header Wrap Start  -->
        <div class="header-wrap">

          <div class="header-logo">
            <a href="/"><img width="200" height="100" src="/assets/images/logo/KPop.png" alt=""></a>
          </div>

          <div class="header-menu d-none d-lg-block">
            <ul class="main-menu">
              <li>
                <a href="/">Home</a>
              </li>
              <li class="active-menu">
                <a href="/events">Events</a>
              </li>
              <li><a href="/profile"> Profile</a></li>


            </ul>
          </div>

          <div class="header-btn d-none d-xl-block">
            <a class="btn" href="/createEvent">Create Event</a>
          </div>

          <!-- Header Toggle Start -->
          <div class="header-toggle d-lg-none">
            <button data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample">
              <span></span>
              <span></span>
              <span></span>
            </button>
          </div>
          <!-- Header Toggle End -->
        </div>

      </div>


    </div>
  </div>
  <!-- Header End -->

  <!-- Offcanvas Start-->
  <div class="offcanvas offcanvas-start" id="offcanvasExample">
    <div class="offcanvas-header">
      <!-- Offcanvas Logo Start -->
      <div class="offcanvas-logo">
        <a href="/"><img width="200" height="100" src="/assets/images/logo/KPop.png" alt=""></a>
      </div>
      <!-- Offcanvas Logo End -->
      <button type="button" class="close-btn" data-bs-dismiss="offcanvas"><i class="flaticon-close"></i></button>
    </div>

    <!-- Offcanvas Body Start -->
    <div class="offcanvas-body">
      <div class="offcanvas-menu">
        <ul class="main-menu">
          <li>
            <a href="/">Home</a>

          </li>
          <li>
            <a href="/events">Events</a>
          </li>
          <li><a href="/profile">Profile</a>
          <li><a href="/createEvent">Creat Event</a>
          </li>

        </ul>

      </div>
    </div>
    <!-- Offcanvas Body End -->
  </div>
  <!-- Offcanvas End -->

  <div class="about-section section-padding-03">
  <% if(event.videoId){%>

  <div id="eventMap">
    <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= event.videoId %>" title="YouTube video de
                player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>


    <% } else {%>
    <div id="eventMap">
      <iframe width="560" height="315" src="https://www.youtube.com/embed?listType=playlist&list=RDCLAK5uy_k27uu-EtQ_b5U2r26DNDZOmNqGdccUIGQ" title="YouTube video de
                  player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
      <% } %>
      <a href="https://www.google.com/maps/search/?api=1&query=<%= event.location %>" target="_blank">
        <img id="mapApi" src="https://maps.googleapis.com/maps/api/staticmap?center=<%= event.location %>&zoom=15&size=600x300&markers=color:red%7Clabel:A%7C<%= event.location %>&key=AIzaSyB4YGxGK5iXbhZLd1y01bPwy5vYLTwHO2k">
      </a>


    </div>
    <section class="container">
    <div>
        <h2>Event: <%= event.summary %></h2>
        <h4>Created by <%= event.user %></h4>
        <!-- TODO bootstrap form-group so that they look aligned-->
        <div class="input">
            <span><i class="fas fa-map-marker-alt"></i> Location:  <%= event.location %></span>
           
        </div>

        <div class="input">
        <span><i class="far fa-calendar-alt"></i> Date: <%= new Date(event.start.dateTime).toLocaleDateString('en-US')  %></span>
        
        </div>

        <div class="input">
        <span><i class="far fa-clock"></i> Starts: <%=  new Date(event.start.dateTime).toLocaleTimeString('en-US') %></span>
       
        </div>

        <div class="input">
        <span><i class="far fa-clock"></i> Ends: <%= new Date(event.end.dateTime).toLocaleTimeString('en-US') %></span>
        </div>
      </div>
    

      <section class="container attendees-container">
        <!-- TODO check how to integrate it with the app -->
        <!-- <button onclick="copyWebsiteLink()">ShareLink</button> -->
        <% if (attendees?.length> 0) { %>
          <div>
              <h3>
              <%=attendees.length %> k-poppers are attending
              </h3>
              <% for (let n=0; n < attendees.length; n++) { %>
              <p>
              <%= attendees[n].user %>
              </p>
              <%}%>
          </div>
        <% } else { %>
          <div>
            <p>No one is attending to this event</p>
          </div>
      <%}%>
          
          <button class="btn" style="display: flex;  ">Attend</button>
      </section>
      <!-- TODO Add edit functionality  -->
      <!-- <div class="btns"> -->
        <!-- <button class="btn" onclick="toggleEditMode()"> Edit <i class="fas fa-pencil-alt"></i></button>
        <button class="btn" onclick="saveChanges()">Save</button> -->

      <!-- </div> -->

    <div class="container">
      <% if (messages?.length> 0) { %>
      <div class="testimonial-area">
        <div class="container">
          <!-- Testimonial Content Start -->
          <% for (let n=0; n < messages.length; n++) { %>
          <div class="message-container" style="border: 1px solid rgb(241, 214, 214);">
            <p style="font-size: medium;">
              <%=messages[n].content %>
            </p>
            <div class="author-details">
              <h5 class="name" style="font-size: small;">
                <%=messages[n].createdBy %>
              </h5>
              <span class="designation" style="font-size: small;">
                <%=new Date(messages[n].createdAt).toLocaleString() %>
              </span>
            </div>
          </div>
          <% } %>
        </div>
      </div>
      <% } else { %>
      <div class="testimonial-area section-padding-04">
        <div class="container">
          <p><strong> No messages for this event, be the first one to comment your thoughts
              below!</strong></p>
        </div>
      </div>
      <% } %>
        <!-- CONFLICT multiple actions when clickin button -->
        <!-- 1.- Form triggering POST to /message -->
        <!-- 2.- msgBtn eventListener fetch /event/:eventId/message -->
        <!-- <form action="/message" type="text" method="POST"> -->
        <form class="form-container">
            <input style="border: 1px solid black;" type="text" placeholder="Let's Talk" name="message">
            <button class="btn msgBtn comment-btn">comment</button>
        </form>
    
      
    </div>



      

    </div>



  </div>
  </div>

